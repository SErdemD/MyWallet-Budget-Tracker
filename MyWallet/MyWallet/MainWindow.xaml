<Window x:Class="MyWallet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWallet"
        
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"

        mc:Ignorable="d"
        Title="MyWallet" MinHeight="220" Width="800" SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Background="#D8CBC7">
    <Window.Resources>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

       
        <Style TargetType="Button">
            <Setter Property="Background" Value="#CC3F0C"/>
            <Setter Property="Foreground" Value="#19231A"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#9A6D38"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#CC3F0C"/>
            <Setter Property="Foreground" Value="#19231A"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <ContentPresenter 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Left"/>
                                    <Path x:Name="SortArrow"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,6,0"
                                  Width="10" Height="6"
                                  Visibility="Collapsed"
                                  Fill="#19231A"
                                  Data="M 0 0 L 10 0 L 5 5 Z"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="SortDirection" Value="Ascending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="180"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="SortDirection" Value="Descending">
                                <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SortArrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#D8CBC7"/>
            <Setter Property="Foreground" Value="#19231A"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridRow">
                        <Border Background="{TemplateBinding Background}">
                            <DataGridCellsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="#19231A"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#19231A"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>

    <Grid Margin="20,20,20,20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <TextBlock 
               x:Name="welcome_tb"
               FontSize="24" FontWeight="SemiBold"
               Foreground="#19231A"
               HorizontalAlignment="Left"
               Margin="20,50,0,30"/>
        <TextBlock x:Name="spentThisMonth"
           FontSize="16"
           FontWeight="Normal"
           Foreground="#19231A"
           Margin="23,75,0,0"
           Text="" Grid.RowSpan="2"/>

        <Button
            x:Name="signOutBtn"
            Content="Sign Out"
            Width="66"
            FontSize="12"
            FontWeight="SemiBold"
            HorizontalAlignment="Left"
            Margin="24,98,0,102"
            Click="signOutBtn_Click"/>

        <Grid ClipToBounds="False"  Margin="458,0,82,10" >
            <lvc:PieChart LegendPosition="Hidden" Width="200" Height="200" Series="{Binding PieSeries}"/>
        </Grid>

        <Button Width="30" Height="30" 
        FontSize="18" 
        FontWeight="Bold" 
        Content="+" 
        HorizontalContentAlignment="Center" 
        VerticalContentAlignment="Center"
        Margin="10"
        Padding="1,1,1,1"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Click="addExpense_Click" />



        <DataGrid 
            ItemsSource="{Binding Expenses}"
            AutoGenerateColumns="False"
            AlternatingRowBackground="Transparent"
            Background="#9A6D38"
            Margin="0,10,0,0"
            Grid.Row="1"
            Height="Auto"
            VerticalAlignment="Top"
            IsReadOnly="True"
            SelectionMode="Single"
            SelectionUnit="FullRow"
            HeadersVisibility="Column"
            GridLinesVisibility="None"
            CanUserAddRows="False"
            BorderThickness="0"
            CanUserDeleteRows="False">


            <DataGrid.Columns>
                <DataGridTextColumn Header="Category" Binding="{Binding category}" Width="464" CanUserSort="False"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding amount, StringFormat=C}" Width="125" />
                <DataGridTextColumn Header="Date" Binding="{Binding timestamp, StringFormat={}{0:dd.MM.yyyy}}" Width="155" />
            </DataGrid.Columns>
        </DataGrid>



    </Grid>

</Window>
